/* pages/home/query.wxss */
.container{
  height:100vh;
  background-color: #efefef;
}
.top{
  position: relative;
}
.bg{
  width:100%; 
  height:200rpx;
}
.back{
  position: absolute;
  top:20%;
  left:5%;
  width:30px;
  height:30px;
  background-color: rgba(0,0,0,.4);
  border-radius: 50%;
}
.back image{
  width:90%;
  height:100%;
}

.backto{
  width:30px;
  height: 30px;
}

.query{
  display: block;
  width:95%;
  padding: 10px 2.5%;
  background-color: #fff;
}
.query-city{
  display: flex;
}
.query-city input{
  width:95%;
  flex:1;
  border-bottom: 1px solid #e6e6e6;
}
.query-city input:last-child{
  text-align: right;
}
.query-city image{
  margin:0 15px;
}
.time-view{

}
.time-view input{
  margin:15px auto;
  border-bottom: 1px solid #e6e6e6;
}
.query .query-btn{
  width:95%;
  background-color: #ff9a14;
  color: #fff;
}